@page "/student"
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using TestSystem.Entities.DTOs.Student

@inject IStudentDashboardService StudentService
@inject AuthenticationStateProvider AuthStateProvider

@attribute [Authorize]

<PageTitle>Student dashboard</PageTitle>

<h3 class="mb-4">Student dashboard</h3>

@if (isLoading)
{
    <p class="text-muted">Loading...</p>
}
else if (dashboard == null)
{
    <div class="alert alert-warning">
        You are not assigned as a student.
    </div>
}
else
{
    <div class="row g-3">
        <div class="col-md-4">
            <NavLink href="/student/teachers" class="text-decoration-none text-dark">
                <div class="card shadow-sm hover-pointer">
                    <div class="card-body text-center">
                        <h6>Teachers</h6>
                        <h2>@dashboard.TeachersCount</h2>
                    </div>
                </div>
            </NavLink>
        </div>

        <div class="col-md-4">
            <NavLink href="/student/tests" class="text-decoration-none text-dark">
                <div class="card shadow-sm hover-pointer">
                    <div class="card-body text-center">
                        <h6>Tests</h6>
                        <h2>@dashboard.AvailableTestsCount</h2>
                    </div>
                </div>
            </NavLink>
        </div>

        <div class="col-md-4">
            <NavLink href="/student/results" class="text-decoration-none text-dark">
                <div class="card shadow-sm hover-pointer">
                    <div class="card-body text-center">
                        <h6>Results</h6>
                        <h2>@dashboard.ResultsCount</h2>
                    </div>
                </div>
            </NavLink>
        </div>
    </div>
}

@code {
    private StudentDashboardDto? dashboard;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = auth.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (userId != null)
            dashboard = await StudentService.GetDashboardAsync(userId);

        isLoading = false;
    }
}
