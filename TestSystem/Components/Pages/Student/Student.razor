@page "/student"
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using TestSystem.Data
@using TestSystem.Entities.DTOs.Student
@using TestSystem.ServiceLayer.Interfaces.Student

@inject IStudentDashboardService StudentService
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager

@attribute [Authorize]

<PageTitle>Student dashboard</PageTitle>

@if (isLoading)
{
    <p class="text-muted">Loading...</p>
}
else if (!profileComplete)
{
    <div class="alert alert-warning">
        Please complete your profile (first and last name) to continue.
    </div>

    <NavLink href="/Account/Manage" class="btn btn-primary">
        Please complete profile to access student dashboard!
    </NavLink>
}
else if (dashboard == null)
{
    <div class="alert alert-warning">
        You are not assigned as a student.
    </div>
}
else
{
    <h3 class="mb-4">Student dashboard</h3>

    <div class="row g-3">
        <div class="col-md-4">
            <NavLink href="/student/teachers" class="text-decoration-none text-dark">
                <div class="card shadow-sm hover-pointer">
                    <div class="card-body text-center">
                        <h6>Teachers</h6>
                        <h2>@dashboard.TeachersCount</h2>
                    </div>
                </div>
            </NavLink>
        </div>

        <div class="col-md-4">
            <NavLink href="/student/tests" class="text-decoration-none text-dark">
                <div class="card shadow-sm hover-pointer">
                    <div class="card-body text-center">
                        <h6>Tests</h6>
                        <h2>@dashboard.AvailableTestsCount</h2>
                    </div>
                </div>
            </NavLink>
        </div>

        <div class="col-md-4">
            <NavLink href="/student/results" class="text-decoration-none text-dark">
                <div class="card shadow-sm hover-pointer">
                    <div class="card-body text-center">
                        <h6>Results</h6>
                        <h2>@dashboard.ResultsCount</h2>
                    </div>
                </div>
            </NavLink>
        </div>
    </div>
}

@code {
    private StudentDashboardDto? dashboard;
    private bool isLoading = true;
    private bool profileComplete;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;

        var user = await UserManager.GetUserAsync(principal);

        if (user == null)
        {
            isLoading = false;
            return;
        }

        profileComplete =
            !string.IsNullOrWhiteSpace(user.FirstName) &&
            !string.IsNullOrWhiteSpace(user.LastName);

        if (profileComplete)
        {
            dashboard = await StudentService.GetDashboardAsync(user.Id);
        }

        isLoading = false;
    }
}
