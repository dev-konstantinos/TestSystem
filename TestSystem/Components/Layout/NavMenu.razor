@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TestSystem.Data
@using TestSystem.MainContext
@using System.Security.Claims
@implements IDisposable

@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider
@inject BusinessDbContext BusinessDb

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TestSystem</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu"></span>
                        @displayName
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <AuthorizeView Roles="@AppRoles.Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-people-fill-nav-menu"></span> Users
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        @if (isTeacher)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="teacher">
                    <span class="bi bi-mortarboard-fill-nav-menu"></span> Teacher
                </NavLink>
            </div>
        }

        @if (isStudent)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="student">
                    <span class="bi bi-book-fill-nav-menu"></span> Student
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    private bool isTeacher;
    private bool isStudent;
    private string? displayName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;

        if (!principal.Identity?.IsAuthenticated ?? true)
            return;

        var userId = principal.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (userId == null)
            return;

        // roles (business)
        isTeacher = await BusinessDb.Teachers
            .AsNoTracking()
            .AnyAsync(t => t.UserId == userId);

        isStudent = await BusinessDb.Students
            .AsNoTracking()
            .AnyAsync(s => s.UserId == userId);

        // identity user (for name)
        var user = await UserManager.GetUserAsync(principal);
        if (user != null)
        {
            displayName =
                !string.IsNullOrWhiteSpace(user.FirstName) &&
                !string.IsNullOrWhiteSpace(user.LastName)
                    ? $"{user.FirstName} {user.LastName}"
                    : user.Email;
        }
    }

    public void Dispose() { }
}
